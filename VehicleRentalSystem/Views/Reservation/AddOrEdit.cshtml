@model VehicleRentalSystem.ViewModels.ReservationViewModel
@{
    Layout = null;
}


<!--Reservation Modal-->
<link href="~/Content/css/daterangepicker.css" rel="stylesheet" />
<div class="modal fade" id="addOrEditModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-gradient-primary">
                <h5 class="modal-title text-light" id="addOrEditModalLabel">Add New Reservation</h5>
                <button id="close" class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div id="mbody" class="modal-body" style="padding-bottom:0px">


                @using (Html.BeginForm("AddOrEdit", "Reservation", FormMethod.Post, new { onsubmit = "return SubmitForm(this)", @class = "form-horizontal", id = "add" }))
                {


                    <div class="container">
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.Reservation.ReservationId)

                        <div class="form-group">
                            <div class="row">
                                <div class="col-sm-5 text-right font-weight-bold">
                                    @Html.LabelFor(model => model.Reservation.ReservationDate, htmlAttributes: new { @class = "control-label" })
                                </div>
                                <div class="col-sm-7 text-left">
                                    <label>@DateTime.Now.Date.ToString("MM/dd/yyyy")</label>
                                    @Html.ValidationMessageFor(model => model.Reservation.ReservationDate, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>


                        <div class="form-group">
                            <div class="row">
                                <div class="col-sm-5 text-right font-weight-bold">
                                    @Html.LabelFor(model => model.Reservation.Customer.Person.FullName, htmlAttributes: new { @class = "control-label" })
                                </div>
                                <div class="col-sm-7 text-left">
                                    @Html.DropDownListFor(m => m.Reservation.Customer.CustomerId, new SelectList(Model.Customers, "CustomerId", "Person.FullName"), "Select Customer", htmlAttributes: new { @class = "form-control form-control-sm" })
                                    @Html.ValidationMessageFor(model => model.Reservation.Customer.Person.FullName, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>



                        <div class="form-group" hidden>
                            <div class="row">
                                <div class="col-sm-5 text-right font-weight-bold">
                                    @Html.LabelFor(model => model.Reservation.StartDate, htmlAttributes: new { @class = "control-label" })
                                </div>
                                <div class="col-sm-7 text-left">
                                    @Html.TextBoxFor(model => model.Reservation.StartDate, "{0:yyyy-MM-dd}", htmlAttributes: new
                                    {
                                        @class = "form-control form-control-sm",
                                        @type = "date",
                                        id = "start-date"@*@value= DateTime.Today.ToString("MM/dd/yyyy")*@})
                                    @Html.ValidationMessageFor(model => model.Reservation.StartDate, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="form-group" hidden>
                            <div class="row">
                                <div class="col-sm-5 text-right font-weight-bold">
                                    @Html.LabelFor(model => model.Reservation.EndDate, htmlAttributes: new { @class = "control-label" })
                                </div>
                                <div class="col-sm-7 text-left">
                                    @Html.TextBoxFor(model => model.Reservation.EndDate, "{0:yyyy-MM-dd}", htmlAttributes: new { @class = "form-control form-control-sm", @type = "date", id = "end-date" })
                                    @Html.ValidationMessageFor(model => model.Reservation.EndDate, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="row">
                                <div class="col-sm-5 text-right font-weight-bold">
                                    @Html.LabelFor(model => model.Reservation.PickUpLocation, htmlAttributes: new { @class = "control-label" })
                                </div>
                                <div class="col-sm-7 text-left">
                                    @Html.DropDownListFor(m => m.Reservation.PickUpLocation.BusinessEntityId, new SelectList(Model.Branches, "BusinessEntityId", "Name"), "Select Branch", htmlAttributes: new { @class = "form-control form-control-sm" })
                                    @Html.ValidationMessageFor(model => model.Reservation.PickUpLocation, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="row">
                                <div class="col-sm-5 text-right font-weight-bold">
                                    <label class="control-label">Period</label>
                                </div>
                                <div class="col-sm-7 text-left">
                                    <input class="form-control form-control-sm text-box single-line" type="text" name="daterange" id="rental-range" />
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="row">
                                <div class="col-sm-5 text-right font-weight-bold">
                                    @Html.LabelFor(model => model.Reservation.DropOffLocation, htmlAttributes: new { @class = "control-label" })
                                </div>
                                <div class="col-sm-7 text-left">
                                    @Html.DropDownListFor(m => m.Reservation.DropOffLocation.BusinessEntityId, new SelectList(Model.Branches, "BusinessEntityId", "Name"), "Select Branch", htmlAttributes: new { @class = "form-control form-control-sm" })
                                    @Html.ValidationMessageFor(model => model.Reservation.DropOffLocation, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="row">
                                <div class="col-sm-5 text-right font-weight-bold">
                                    @Html.LabelFor(model => model.Reservation.VehicleType, htmlAttributes: new { @class = "control-label" })
                                </div>
                                <div class="col-sm-7 text-left">
                                    @Html.DropDownListFor(m => m.Reservation.VehicleType.VehicleTypeId, new SelectList(Model.VehicleTypes, "VehicleTypeId", "Name"), "Select Vehicle Type", htmlAttributes: new { @class = "form-control form-control-sm" })
                                    @Html.ValidationMessageFor(model => model.Reservation.VehicleType, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>


                        <div class="col-12 text-right align-content-center">
                            <div class="modal-footer border-0">
                                <input type="Reset" value="Reset" class="btn btn-secondary" />
                                <input type="submit" value="Submit" class="btn btn-primary" />
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/customscpt/reservationModal.js"></script>


